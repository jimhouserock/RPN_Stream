source 'https://rubygems.org'

ruby '3.2.3'

# Core Rails
gem 'rails', '~> 8.0.0'

# Database
gem 'sqlite3', '>= 2.1'

# Web server
gem 'puma', '~> 6.0'

# Assets and JavaScript
gem 'importmap-rails'
gem 'turbo-rails'
gem 'stimulus-rails'
gem 'sprockets-rails'

# JSON APIs
gem 'jbuilder'

# Boot optimization
gem 'bootsnap', require: false

# Timezone data for Alpine Linux
gem 'tzinfo-data'

group :development, :test do
  gem 'debug', platforms: %i[ mri ]
  gem 'rspec-rails'
end

group :development do
  gem 'web-console'
end